@page
@model WebAPI.Pages.IndexModel
@{
    ViewData["Title"] = "Welcome to DnA BarberShop";
}


<div class="container mt-5">
    <div class="jumbotron bg-dark text-white text-center">
        <h1 class="display-4">Welcome to DnA BarberShop!</h1>
        <p class="lead">Experience the best grooming services in town. Our skilled barbers are here to give you the perfect look.</p>
        <hr class="my-4 border-light">
        <p>Book an appointment today and enjoy a premium barbering experience.</p>
        <a class="btn btn-outline-info btn-lg" href="@Url.Action("Index", "Clients")" role="button">Make your appointment now!</a>
    </div>
</div>

<div class="container mt-5">
    <div class="text-center">
        <h2>About Us</h2>
        <p class="mt-3">At DnA BarberShop, we offer a range of services including haircuts, shaves, and grooming. Our team of professional barbers is dedicated to providing you with the best service possible. Visit us and experience the difference!</p>
    </div>
</div>