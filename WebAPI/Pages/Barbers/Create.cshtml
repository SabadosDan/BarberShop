@model WebAPI.Pages.Barbers.CreateModel

@{
    ViewData["Title"] = "Create";
}


<h1>Create</h1>

<h4>Barber</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-page="./Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
