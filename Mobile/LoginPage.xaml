<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="Mobile.LoginPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Login">

    <StackLayout Padding="20" VerticalOptions="Center">
        <Image Source="barbershop_logo.png"
        HeightRequest="300"
        WidthRequest="300"
        HorizontalOptions="Center" />

        <Entry x:Name="PhoneNumberEntry" Placeholder="Phone Number" Keyboard="Telephone" Margin="0,10"/>
        <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True" Margin="0,10"/>

        <Button 
            Text="Login" 
            Margin="0,20" 
            BackgroundColor="#001F54" 
            TextColor="White" 
            Clicked="OnLoginClicked"/>


        <Button
            Text="Register"
            BackgroundColor="#1E90FF"
            TextColor="White"
            Clicked="OnRegisterClicked"
            VerticalOptions="CenterAndExpand" />

    </StackLayout>
</ContentPage>
