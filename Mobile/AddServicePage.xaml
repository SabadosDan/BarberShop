<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mobile.AddServicePage"
             Title="AddServicePage">
    <StackLayout Padding="10">
        <Picker x:Name="BarberPicker" Title="Select Barber" ItemDisplayBinding="{Binding FullName}"/>
        <Entry x:Name="ServiceNameEntry" Placeholder="Service Name" />
        <Entry x:Name="PriceEntry" Placeholder="Price" Keyboard="Numeric" />
        <Entry x:Name="DurationEntry" Placeholder="Duration (hh:mm:ss)" />

        <Button Text="Add Service" Clicked="OnAddServiceClicked" />
    </StackLayout>
</ContentPage>