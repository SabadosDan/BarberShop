<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mobile.AdminPage"
             Title="Admin">
    <VerticalStackLayout Spacing="20" Padding="20">
      
        <Label Text="Welcome to Admin Dashboard!"
               VerticalOptions="Start"
               HorizontalOptions="Center"
               FontSize="20"
               Margin="0,10"/>

        <VerticalStackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="Center">
            <Button Text="Vezi Frizerii"
                    Clicked="OnViewBarbersClicked"
                    HorizontalOptions="Center"
                    Margin="0,10"/>
            <Button Text="Adaugă frizer"
                    Clicked="OnAddBarberClicked"
                    HorizontalOptions="Center"
                    Margin="0,10"/>
            <Button Text="Adaugă Serviciu la frizer"
                    Clicked="OnAddSericeToBarberClicked"
                    HorizontalOptions="Center"
                    Margin="0,10"/>
        </VerticalStackLayout>

        <Button Text="Logout"
                BackgroundColor="Red"
                TextColor="White"
                HorizontalOptions="Center"
                VerticalOptions="End"
                Margin="0,20"
                Clicked="OnLogoutClicked"/>
    </VerticalStackLayout>
</ContentPage>
