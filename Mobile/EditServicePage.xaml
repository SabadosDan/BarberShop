<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mobile.EditServicePage"
             Title="EditServicePage">
    <StackLayout Padding="10">
       
        <Entry x:Name="IdEntry" IsVisible="False" />

        <Entry x:Name="ServiceNameEntry" Placeholder="Service Name" />
        <Entry x:Name="PriceEntry" Placeholder="Price" Keyboard="Numeric" />
        <Entry x:Name="DurationEntry" Placeholder="Duration" />

        <Picker x:Name="BarberPicker" Title="Select Barber" />

        <Button Text="Save Changes" Clicked="OnSaveChangesClicked" />
    </StackLayout>
</ContentPage>