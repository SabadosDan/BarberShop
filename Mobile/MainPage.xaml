<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mobile.MainPage"
             Title="Home">
    
    <StackLayout Padding="20" Spacing="20">
        <Label Text="Bine ai venit la BarberShop!"
               FontSize="24"
               HorizontalOptions="Center" />
        <Image Source="barbershop_logo.png"
               HeightRequest="300"
               WidthRequest="300"
               HorizontalOptions="Center" />
        <Button Text="Vezi frizerii si serviciile lor"
                BackgroundColor="#512BD4"
                TextColor="White"
                Clicked="OnVeziServiciiClicked" />
        <Button Text="Contactează-ne"
                BackgroundColor="#FF5733"
                TextColor="White"
                Clicked="OnContacteazaClicked" />
    </StackLayout>
    
</ContentPage>
